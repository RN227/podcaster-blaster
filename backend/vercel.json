{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/**/*"]
      }
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "/src/index.ts"
    },
    {
      "src": "/api/analyze",
      "dest": "/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/src/index.ts"
    }
  ],
  "functions": {
    "src/index.ts": {
      "maxDuration": 300
    }
  },
  "env": {
    "ANTHROPIC_API_KEY": "@anthropic_api_key",
    "YTDLP_PATH": "",
    "PORT": "3001"
  }
}